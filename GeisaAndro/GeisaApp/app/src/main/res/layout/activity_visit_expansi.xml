<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.customer.CustomerOutletActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_below="@id/tools"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/custName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Customer Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tools"
            android:layout_gravity="center"
            android:gravity="center">

            <!--<include layout="@layout/content_visit_main" />-->
            <GridLayout
                android:id="@+id/mainmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnExNoo"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/menu_noo"
                    />

                <Button
                    android:id="@+id/btnExSample"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/menu_sample"/>

                <Button
                    android:id="@+id/btnCsSosialisasi"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/i2"
                    android:visibility="invisible"
                    android:text="Sosialisasi Program" />

                <Button
                    android:id="@+id/btnVisitBi"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/i3"
                    android:text="BIN"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnVisitEx"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/img_main_promo"
                    android:text="Expansi"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnVisitHi"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="@dimen/main_margin_button_bottom"
                    android:layout_marginLeft="@dimen/main_margin_button_left"
                    android:layout_marginRight="@dimen/main_margin_button_right"
                    android:layout_marginTop="@dimen/main_margin_button_top"
                    android:background="@drawable/i5"
                    android:text="Historical"
                    android:visibility="invisible" />

            </GridLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
